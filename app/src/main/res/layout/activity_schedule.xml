<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDD6F6">
    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_toolbar"
        android:background="@android:color/black"
        android:layout_below="@+id/toolbar"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Together"
            android:textSize="15dp"
            android:textColor="#3333FF"
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:id="@+id/schedule_text"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행계획"
            android:textSize="28dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOO님의 여행계획 추가하기"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 떠나고 싶다면, 여행계획을 등록하세요"
            android:textColor="#000000"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/schedule_text"
        android:background="@drawable/schedule_background"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/signup"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/email"
            android:text="날짜"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#FF0000"
            android:text="*"
            android:layout_toRightOf="@+id/email"
            android:layout_alignBaseline="@+id/email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_below="@+id/email"
            android:textSize="18dp"
            android:hint=" 여행 날짜를 입력하세요."
            android:textColor="#BBBBBB"
            android:layout_marginTop="3dp"
            android:id="@+id/email_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/email_edit"
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:id="@+id/password"
            android:text="여행지"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#FF0000"
            android:text="*"
            android:layout_toRightOf="@+id/password"
            android:layout_alignBaseline="@+id/password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_below="@+id/password"
            android:textSize="18dp"
            android:hint=" 어디로 여행가나요?"
            android:textColor="#BBBBBB"
            android:id="@+id/password_edit"
            android:layout_marginTop="3dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_below="@+id/password_edit"
            android:id="@+id/name_relative">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:text="메모"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="*"
                android:layout_toRightOf="@+id/name"
                android:layout_alignBaseline="@+id/name"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:textSize="18dp"
                android:hint=" 내용을 입력하세요"
                android:textColor="#BBBBBB"
                android:id="@+id/name_edit"
                android:layout_marginTop="3dp" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/signup_request"
            android:text="추가하기"
            android:textSize="15dp"
            android:background="@drawable/button_background"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"/>

    </RelativeLayout>



</RelativeLayout>

