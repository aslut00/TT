<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_toolbar"
        android:background="@android:color/black"
        android:layout_below="@+id/toolbar"/>

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Travel Together"
            android:textSize="15dp"
            android:textColor="#3333FF"
            android:id="@+id/toolbar_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/signup"
        android:text="회원가입"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/signup"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/email"
        android:text="이메일"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#FF0000"
        android:text="*"
        android:layout_toRightOf="@+id/email"
        android:layout_alignBaseline="@+id/email"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/email"
        android:textSize="13dp"
        android:hint=" 이메일을 입력하세요."
        android:textColor="#BBBBBB"
        android:layout_marginTop="3dp"
        android:id="@+id/email_edit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/email_edit"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/password"
        android:text="비밀번호"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#FF0000"
        android:text="*"
        android:layout_toRightOf="@+id/password"
        android:layout_alignBaseline="@+id/password"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/password"
        android:textSize="13dp"
        android:hint=" 8자 이상 문자,숫자 조합해주세요."
        android:textColor="#BBBBBB"
        android:id="@+id/password_edit"
        android:layout_marginTop="3dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_edit"
            android:id="@+id/name_relative">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:id="@+id/name"
                android:text="이름"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="*"
                android:layout_toRightOf="@+id/name"
                android:layout_alignBaseline="@+id/name"
                />
            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_below="@+id/name"
                android:textSize="13dp"
                android:hint=" 이름을 입력하세요."
                android:textColor="#BBBBBB"
                android:id="@+id/name_edit"
                android:layout_marginTop="3dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_relative"
            android:layout_alignBaseline="@+id/name_relative">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:id="@+id/gender"
                android:text="성별"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#FF0000"
                android:text="*"
                android:layout_toRightOf="@+id/gender"
                android:layout_alignBaseline="@+id/gender"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender"
                android:textSize="13dp"
                android:hint=" 성별을 입력하세요."
                android:textColor="#BBBBBB"
                android:id="@+id/gender_edit"
                android:layout_marginTop="3dp" />
        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_below="@+id/name_relative"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:id="@+id/birthday"
        android:text="생년월일"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#FF0000"
        android:text="*"
        android:layout_toRightOf="@+id/birthday"
        android:layout_alignBaseline="@+id/birthday"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_below="@+id/birthday"
        android:textSize="13dp"
        android:hint=" 생일을 입력하세요. ex)19020101"
        android:textColor="#BBBBBB"
        android:id="@+id/birthday_edit"
        android:layout_marginTop="3dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/signup_request"
        android:text="회원가입"
        android:textSize="15dp"
        android:background="@drawable/button_background"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"/>

</RelativeLayout>

